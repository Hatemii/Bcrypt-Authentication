<h1>Jobs</h1>

<%= link_to 'Create New Job', new_job_path, class: "btn btn-primary" %>


<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
            <th>User</th>
            <th>Date Post</th>
            <th>Action</th>
        </tr>
    </thead>

    <tbody>
        <% @jobs.each do |job| %>
        <tr>
            <td><%= job.title %></td>
            <td><%= job.body %></td>
            <td><%= job.user.userHandle %></td>
            <td><%= job.created_at.strftime("%d/%m/%Y") %></td>
            <td><%= link_to 'Show', job, class: "btn btn-info" %>
                <% if logged_in? && (current_user == job.user || current_user.admin?) %>
                | <%= link_to 'Edit', edit_job_path(job), class: "btn btn-success" %> |
                <%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
                <% end %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>